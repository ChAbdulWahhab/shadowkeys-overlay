<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Cheat Injection Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Timing Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keystroke Delay"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjust the delay between keystrokes. Increase if cheats don't work."
            android:textSize="14sp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_timing_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="100ms"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#4CAF50"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekbar_timing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="300"
            android:min="50"
            android:progress="100"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recommended values:&#10;â€¢ Fast devices: 80-100ms&#10;â€¢ Medium devices: 100-150ms&#10;â€¢ Slow devices: 150-250ms"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"/>

        <!-- Test Button -->
        <Button
            android:id="@+id/btn_test_injection"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ§ª Test Injection"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Instructions Button -->
        <Button
            android:id="@+id/btn_instructions"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ðŸ“‹ GTA SA Instructions"
            android:textSize="16sp"
            android:layout_marginBottom="16dp"/>

        <!-- Tip Box -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Tip: If cheats don't work in GTA SA, try increasing the delay to 150-200ms"
            android:textSize="14sp"
            android:textStyle="italic"
            android:gravity="center"
            android:padding="12dp"
            android:background="#FFEB3B"
            android:textColor="#000000"
            android:layout_marginBottom="16dp"/>

        <!-- Info Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â„¹ï¸ How It Works"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Screen tap ensures game has focus&#10;2. Characters typed with configured delay&#10;3. ENTER key sent after cheat (some versions need this)&#10;4. All timing is optimized for GTA SA"
            android:textSize="14sp"
            android:padding="8dp"/>

    </LinearLayout>

</ScrollView>

